<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:navigation="http://schemas.android.com/apk/res/com.jcl.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <com.jcl.android.view.MyUINavigationView
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center"
        navigation:left_drawable="@drawable/btn_back_click"
        navigation:right_visible="false"
        navigation:tv_title="会员登录" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_header_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="会员登录"
                android:textColor="#1384B0"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="用户名"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/h4" />

            <EditText
                android:id="@+id/edt_loginName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/edt_content"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:hint="请输入手机号"
                android:textColor="@color/tab_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="密 码"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/h4" />

            <EditText
                android:id="@+id/edt_loginPassword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/edt_content"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/tab_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <CheckBox
                android:id="@+id/cb_savePwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <TextView
                android:id="@+id/tv_savePwd"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="记住密码"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/h5" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/tab_text" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/h5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_login_selector"
                android:text="登  录"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_find_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right|center"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/h5" 
            android:textColor="@color/tab_text"
            android:text="忘记密码？找回" />

    </LinearLayout>

</LinearLayout>