<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:navigation="http://schemas.android.com/apk/res/com.jcl.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:divider="@drawable/horizontal_divider"
    android:orientation="vertical"
    android:showDividers="middle" >

    <com.jcl.android.view.MyUINavigationView
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center"
        navigation:left_drawable="@drawable/btn_back_click"
        navigation:right_visible="false"
        navigation:tv_title="我的物流圈" />
    <TextView
        android:id="@+id/tv_jingjiren"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_getfriends"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="我的经纪人"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

    <TextView
        android:id="@+id/tv_siji"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_carinfo"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="我的司机"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

    <TextView
        android:id="@+id/tv_kehu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_myquan"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="我的客户"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

    
    <TextView
        android:id="@+id/tv_lianxiren"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/contact"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="联系人"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

</LinearLayout>