<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:navigation="http://schemas.android.com/apk/res/com.jcl.android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    <com.jcl.android.view.MyUINavigationView
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center"
        navigation:left_drawable="@drawable/btn_back_click"
        navigation:btn_rightText="完成"
        navigation:tv_title="设置" />
    <View 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:text="开启推送服务"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5"
            android:drawableLeft="@drawable/icon_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button 
            android:id="@+id/btn_push"
            android:text="关闭"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="@dimen/h5"
            android:background="@drawable/icon_open"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>
    <View 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>
    <LinearLayout 
        android:id="@+id/ll_select_place"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:text="抢单播报模式"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5"
            android:drawableLeft="@drawable/icon_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button 
            android:id="@+id/btn_push_mode"
            android:text="进入"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="@dimen/h5"
            android:background="@drawable/icon_open"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>
    
