<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back_click" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="在线报价"
            android:textColor="@color/white"
            android:textSize="@dimen/h3" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="30dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/view_bg" />

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_chufadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_detail_chufadi"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_detail_right_jt" />

                <TextView
                    android:id="@+id/tv_mudidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_detail_mudidi"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:background="@color/view_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_goods_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_top"
                    android:drawableLeft="@drawable/icon_find_detail_goods_info"
                    android:drawablePadding="5dp"
                    android:textColor="@color/color666"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/tv_chexing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_top"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_find_detail_chexing"
                    android:drawablePadding="5dp"
                    android:textColor="@color/color666"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/tv_chufashijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_top"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_find_detail_chufashijian"
                    android:drawablePadding="5dp"
                    android:textColor="@color/color666"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/tv_maoyileixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_top"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_find_detail_maoyileixing"
                    android:drawablePadding="5dp"
                    android:textColor="@color/color666"
                    android:textSize="@dimen/h6" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:background="@color/view_bg" />

            <TextView
                android:id="@+id/tv_zonglicheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textColor="@color/navigation"
                android:textSize="@dimen/h5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="0dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="手机"
                        android:textColor="@color/tab_text"
                        android:textSize="@dimen/h5" />

                    <EditText
                        android:id="@+id/edt_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="未填写"
                        android:inputType="phone"
                        android:textColor="@color/tab_text"
                        android:textColorHint="@color/defult_text"
                        android:textSize="@dimen/h6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/textView1"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/next_icon"
                        android:visibility="invisible" />
                </LinearLayout>
                
                <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:visibility="visible" />
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="联系人"
                        android:textColor="@color/tab_text"
                        android:textSize="@dimen/h5" />

                    <EditText
                        android:id="@+id/edt_linkman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="未填写"
                        android:textColor="@color/tab_text"
                        android:textColorHint="@color/defult_text"
                        android:textSize="@dimen/h6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/textView1"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/next_icon"
                        android:visibility="invisible" />
                </LinearLayout>
                
                <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:visibility="visible" />
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="报价（元）"
                        android:textColor="@color/tab_text"
                        android:textSize="@dimen/h5" />

                    <EditText
                        android:id="@+id/edt_baojia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:editable="false"
                        android:gravity="right"
                        android:hint="未填写"
                        android:inputType="phone"
                        android:textColor="@color/tab_text"
                        android:textColorHint="@color/defult_text"
                        android:textSize="@dimen/h6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/textView1"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/next_icon"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_pay_price"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_register"
                    android:gravity="center"
                    android:text="发送报价"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:textSize="@dimen/h4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>