<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back_click" />
        
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="车源详情"
            android:textSize="@dimen/h3"
            android:textColor="@color/white" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="【誉畅APP】"
            android:textSize="@dimen/h7"
            android:textColor="@color/white" />
        
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_toolbar_share" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/cb_toobar_collect_selector"
            android:visibility="gone" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:clipToPadding="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/view_bg" />

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_chufadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_detail_chufadi"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_detail_right_jt" />

                <TextView
                    android:id="@+id/tv_mudidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_detail_mudidi"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_dangqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h5" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:background="@color/view_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >
                <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="空车时间"/>
                    <TextView  
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >
                <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="途径"/>
                    <TextView  
                        android:id="@+id/tv_point"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
            </LinearLayout>
            
            <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="价格"/>
                    <TextView  
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="1500"/>
                    
                </LinearLayout>
                 <LinearLayout android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:padding="10dp">
                    <TextView  
                        android:id="@+id/tv_type0"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/orange"
                        android:text="顺风车"/>
                    <TextView  
                        android:id="@+id/tv_type1"
                        android:layout_marginLeft="20dp"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/red"
                        android:text="实时"/>
                    <TextView  
                        android:id="@+id/tv_type2"
                        android:layout_marginLeft="20dp"
                        android:layout_width="80dp"
                        android:background="@color/white"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="整车配货"
                        />
                    
                </LinearLayout>
            


            <TextView android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="车辆信息"
                android:textColor="@color/navigation"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >
                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView 
                        android:id="@+id/img_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"/>
                    <View android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <ImageView 
                        android:id="@+id/img_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"/>
                    <View android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <ImageView 
                        android:id="@+id/img_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"/>
                </LinearLayout>
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="发布时间"/>
                    <TextView  
                        android:id="@+id/tv_publish_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车牌"/>
                    <TextView  
                        android:id="@+id/tv_carcode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="联系电话"/>
                    <TextView  
                        android:id="@+id/tv_tel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车型车长"/>
                    <TextView  
                        android:id="@+id/tv_chexing"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="载重"/>
                    <TextView
                        android:id="@+id/tv_carweight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="常跑线1"/>
                    <TextView
                        android:id="@+id/linearea1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="常跑线2"/>
                    <TextView
                        android:id="@+id/linearea2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="常跑线3"/>
                    <TextView
                        android:id="@+id/linearea3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="常跑线4"/>
                    <TextView
                        android:id="@+id/linearea4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_laiyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_find_detail_maoyileixing"
                    android:drawablePadding="5dp"
                    android:text="来源"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/tv_laiyuanxinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666"
                    android:textSize="@dimen/h5" />
            </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/must"
                    android:text="联系时请说明是在誉畅手机配货（聚畅物通网）上看到的信息为提高信息有效性，信息失效，欢迎拨打4006-054-077 告知。" />
            </LinearLayout>
            </LinearLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:background="@color/view_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_pay_tel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_register"
                    android:gravity="center"
                    android:text="电话询价"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:textSize="@dimen/h4" />
                <TextView
                    android:id="@+id/tv_evalute"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_register"
                    android:gravity="center"
                    android:text="查看评价"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:textSize="@dimen/h4" />
                <TextView
                    android:id="@+id/tv_pay_online"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_login_selector"
                    android:gravity="center"
                    android:text="邀请报价"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>