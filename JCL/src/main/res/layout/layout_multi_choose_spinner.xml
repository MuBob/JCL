<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/line1_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line1_height"
        android:background="@null"
        >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="@dimen/content_margin_left"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="标题"
            android:lines="1"
            android:gravity="left"
            android:ellipsize="none"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_size"/>

        <RelativeLayout
            android:id="@+id/line_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginStart="@dimen/content_margin_left"
            android:background="@null"
            android:onClick="clickSpinner">

            <ImageView
                android:id="@+id/spinner_image"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@id/spinner_image"
                android:layout_toStartOf="@id/spinner_image"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                android:text="选择文本内容"
                android:gravity="right"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/content_text_size"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/line_content_text"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/gray"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            />
        <com.zonetry.library.widget.TagCloudLayout
            android:id="@+id/tag_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineSpacing="8dp"
            app:tagSpacing="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="15dp"
            android:divider="@null"
            />
    </RelativeLayout>
</LinearLayout>