<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:navigation="http://schemas.android.com/apk/res/com.jcl.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:divider="@drawable/horizontal_divider"
    android:orientation="vertical"
    android:showDividers="middle" >

    <com.jcl.android.view.MyUINavigationView
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center"
        navigation:left_drawable="@drawable/btn_back_click"
        navigation:right_visible="false"
        navigation:tv_title="我的收藏" />

    <LinearLayout
        android:id="@+id/ll_collect_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_setting_public_goods"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="货源信息"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_setting_public_cars"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="车源信息"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_zhuanxian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_setting_public_zhuanxian"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="专线信息"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_zhuanxian_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_gjyunjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_setting_public_gjyunjia"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="国际运价"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_gjyunjia_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_gjxianlu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_setting_public_gjxianlu"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="国际优势线路"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_gjxianlu_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_carmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_settting_public_carmaimai"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="车辆买卖信息"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_carmm_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_setting_public_other"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="其他信息"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_other_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="已收藏0条信息"
            android:textColor="@color/defult_text"
            android:textSize="@dimen/h7" />
    </LinearLayout>

</LinearLayout>