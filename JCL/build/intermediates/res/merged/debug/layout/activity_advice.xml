<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back_click" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="意见反馈"
            android:textSize="@dimen/h3"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/icon_phone" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3"
        android:textColor="@color/color666"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="说说您的投诉建议" />
    
    <EditText
                    android:id="@+id/et_advice"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_public_check_nomal"
                    android:gravity="left|top"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:hint="如果您有什么需要投诉的，或者对我们软件有什么好的建议，欢迎您及时告诉我们，我们及时改正，以便能更好的为大家服务，谢谢您的支持！"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/tab_text"
                    android:textSize="@dimen/h5" />
    
    <Button
                    android:id="@+id/btn_tijiao"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_register"
                    android:text="提交"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white" />

</LinearLayout>
