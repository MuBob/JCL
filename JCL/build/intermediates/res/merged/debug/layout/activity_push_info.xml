<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:navigation="http://schemas.android.com/apk/res/com.jcl.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back_click" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推送消息"
            android:textColor="@color/white"
            android:textSize="@dimen/h3" />
        
    </LinearLayout>

    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/tv_content"
	            android:padding="20dp"
	            android:minHeight="200dp"
	            android:textSize="18dp"
	            android:text="eweads"
	            android:layout_width="fill_parent"
	            android:textColor="@android:color/black"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            />
		        <RelativeLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        >
			
			        <TextView
			            android:id="@+id/tv_clock"
			            android:layout_width="60dp"
			            android:layout_height="60dp"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:gravity="center"
			            android:textColor="@android:color/white"
			            android:layout_marginRight="50dp"
			            android:text="0s"
			            android:background="@drawable/icon_timer"/>

			        <TextView
			            android:id="@+id/tv_qiangdan"
			            android:layout_width="80dp"
			            android:layout_height="80dp"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="50dp"
			            android:background="@drawable/icon_qiangdan"
			            android:gravity="center"
			            android:text="抢"
			            android:textColor="@android:color/white"
			            android:textSize="30sp" />

		    	</RelativeLayout>
	    </LinearLayout>
    
    </ScrollView>


</LinearLayout>