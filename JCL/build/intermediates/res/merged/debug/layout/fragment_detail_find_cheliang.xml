<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back_click" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车辆详情"
            android:textSize="@dimen/h3"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:src="@drawable/icon_toolbar_share" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/cb_toobar_collect_selector"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:clipToPadding="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/view_bg" />

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常驻地:"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h4" />

                <TextView
                    android:id="@+id/tv_changzhudi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textColor="@color/navigation"
                    android:textSize="@dimen/h5" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_top_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前位置:"
                    android:drawablePadding="5dp"
                    android:textColor="@color/mylocation"
                    android:textSize="@dimen/h4" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textColor="@color/mylocation"
                    android:textSize="@dimen/h5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:background="@color/view_bg" />
            <TextView android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="车辆信息"
                android:textColor="@color/navigation"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >
                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView 
                        android:id="@+id/img_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"/>
                    <View android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <ImageView 
                        android:id="@+id/img_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"/>
                    <View android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <ImageView 
                        android:id="@+id/img_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"/>
                </LinearLayout>
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车        牌"/>
                    <TextView  
                        android:id="@+id/tv_carcode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="距        离"/>
                    <TextView  
                        android:id="@+id/tv_juli"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车型外形"/>
                    <TextView  
                        android:id="@+id/tv_chexing"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="载        重"/>
                    <TextView  
                        android:id="@+id/tv_carweight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车        长"/>
                    <TextView  
                        android:id="@+id/tv_carlength"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车辆所属"/>
                    <TextView  
                        android:id="@+id/tv_company"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                 <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="认证状态"/>
                    <TextView  
                        android:id="@+id/tv_authentication_state"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="车辆装载状况"/>
                    <TextView  
                        android:id="@+id/tv_load_state"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""/>
                    
                </LinearLayout>
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="常跑线1"/>
                    <TextView
                        android:id="@+id/linearea1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="常跑线2"/>
                    <TextView
                        android:id="@+id/linearea2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="常跑线3"/>
                    <TextView
                        android:id="@+id/linearea3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                <LinearLayout android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">
                    <TextView  
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="常跑线4"/>
                    <TextView
                        android:id="@+id/linearea4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=""/>
                    
                </LinearLayout>
                <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:background="@color/view_bg" />
                
            </LinearLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:background="@color/view_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_pay_tel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_register"
                    android:gravity="center"
                    android:text="电话询价"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:textSize="@dimen/h4" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_pay_online"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_login_selector"
                    android:gravity="center"
                    android:text="邀请报价"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>