<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:navigation="http://schemas.android.com/apk/res/com.jcl.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:divider="@drawable/horizontal_divider"
    android:orientation="vertical"
    android:showDividers="middle" >

    <com.jcl.android.view.MyUINavigationView
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation"
        android:gravity="center"
        navigation:left_drawable="@drawable/btn_back_click"
        navigation:right_visible="false"
        navigation:tv_title="管理发布" />
    <TextView
        android:id="@+id/tv_setting_public_goods"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_goods"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的货源"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

    <TextView
        android:id="@+id/tv_setting_public_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_cars"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的车源"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

    <TextView
        android:id="@+id/tv_setting_public_zhuanxian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_zhuanxian"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的专线"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

    <TextView
        android:id="@+id/tv_setting_public_gjyunjia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_gjyunjia"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的国际运价"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_setting_public_gjxianlu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_gjxianlu"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的国际优势线路"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_setting_public_carmaimai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_settting_public_carmaimai"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的车辆买卖信息"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_setting_public_other"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_other"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的其他"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />
    
    <TextView
        android:id="@+id/tv_setting_public_kuaixun"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_setting_public_gjxianlu"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发布的快讯"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/h5" />

</LinearLayout>