<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_selector"
            android:text="急"
            android:textColor="@color/white"
            android:textSize="@dimen/h3"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_chufadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/navigation"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/navigation" />

        <TextView
            android:id="@+id/tv_mudidi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/navigation"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/tv_alreadyOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="5dp"
            android:text="已成交"
            android:textColor="@color/white"
            android:textSize="@dimen/h5"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_chufashijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_find_fahuoshijian"
        android:drawablePadding="5dp"
        android:text="TextView"
        android:textColor="@color/color666"
        android:textSize="@dimen/h6" />

    <TextView
        android:id="@+id/tv_goodsinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chufashijian"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/icon_find_goods_info"
        android:drawablePadding="5dp"
        android:text="TextView"
        android:textColor="@color/color666"
        android:textSize="@dimen/h6" />

    <TextView
        android:id="@+id/tv_chexing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goodsinfo"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/icon_find_chexing"
        android:drawablePadding="5dp"
        android:text="TextView"
        android:textColor="@color/color666"
        android:textSize="@dimen/h6" />
    <ImageView
	        android:id="@+id/img_call"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/tv_chexing"
	        android:layout_below="@+id/tv_goodsinfo"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_phone" />
    
    <TextView
        android:id="@+id/tv_chengyunprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chexing"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/icon_find_detail_fukuanfangshi"
        android:drawablePadding="5dp"
        android:text="TextView"
        android:textColor="@color/must"
        android:textSize="@dimen/h6" />
    <TextView
        android:id="@+id/tv_tuoguanyunfei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chexing"
        android:layout_toRightOf="@+id/tv_chengyunprice"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:text="托管运费"
        android:visibility="gone"
        android:background="@color/must"
        android:textColor="@color/white"
        android:textSize="@dimen/h6" />
    <TextView
        android:id="@+id/tv_fangqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chexing"
        android:layout_toRightOf="@+id/tv_tuoguanyunfei"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:text="取消订单"
        android:textColor="@color/navigation"
        android:textSize="@dimen/h6" />
    <TextView
        android:id="@+id/tv_chakanhuidan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chexing"
        android:layout_toRightOf="@+id/tv_fangqi"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        android:text="查看回单"
        android:textColor="@color/navigation"
        android:textSize="@dimen/h6" />

    <TextView
        android:id="@+id/tv_qiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_qiang"
        android:gravity="center"
        android:text="查看\n报价"
        android:textColor="@color/white"
        android:textSize="@dimen/h5"
         />
    <TextView
            android:id="@+id/img_evalute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chexing"
            android:layout_toRightOf="@+id/tv_chakanhuidan"
            android:background="@drawable/btn_login_selector"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:text="评价车主"
            android:textSize="@dimen/h5"/>

</RelativeLayout>